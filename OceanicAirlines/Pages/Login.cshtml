@page
@model OceanicAirlines.Pages.LoginModel
@{
}
<div class="container-fluid d-flex h-100 justify-content-center col-12 col-sm-9 col-md-8 col-lg-7 col-xl-6">
    <div class="row align-self-center w-100">
        <div class="mx-auto w-100">
            <div class="text-center" style="margin-bottom: 30px"><img src="/img/secondary.jpg" style="width: 350px"></div>
            <div class="jumbotron">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                }
                <form method="post">
                    <div class="form-group">
                        <input required type="email" class="form-control" id="emailinput" name="emailinput" aria-describedby="emailHelp" placeholder="Email">
                        <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                    </div>
                    <div class="form-group">
                        <input required type="password" class="form-control" id="passwordinput" name="passwordinput" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary col-12">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>